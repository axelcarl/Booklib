<h2 class="page-header">Search Authors</h2>
<form action="/authors" methos="get">
<label >Name</label>
<input type="text" name="name" value="<%= searchOptions.name %> ">
<button class="btn" type="submit">Query</button>
</form>
<br>
<% authors.forEach(author => { %>
  <div class="author"> <%= author.name %> </div>
  <div class="btn-row">
    <a class="btn" href="/authors/<%= author.id %> ">View</a>
    <a class="btn" href="/authors/<%= author.id%>/edit">Edit</a>
    <%- include('../partials/deleteForm', 
                    { url: `/authors/${author.id}` }) %> 
  </div>
<% }) %>
  